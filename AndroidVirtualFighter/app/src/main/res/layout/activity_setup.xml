<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/blueBlock"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#2ecc71" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@id/blueBlock"
        android:background="#27ae60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Virtual Fighter"
        android:textColor="#ecf0f1"
        android:textSize="20pt" />

    <Button
        android:id="@+id/singlePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blueBlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_blue"
        android:text="Single Player Mode"
        android:textColor="#ecf0f1" />

    <Button
        android:id="@+id/joinMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/singlePlayer"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_blue"
        android:text="Join A Match"
        android:textColor="#ecf0f1" />

    <Button
        android:id="@+id/hostMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/joinMatch"
        android:background="@drawable/button_blue"
        android:text="Host A Match"
        android:textColor="#ecf0f1" />

    <Button
        android:id="@+id/wagerMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/hostMatch"
        android:background="@drawable/button_blue"
        android:text="Enable Wager Mode"
        android:textColor="#ecf0f1" />

</RelativeLayout>